#!/bin/bash -exu

export PATH="${PATH}:/var/vcap/packages/etcd/bin"
export GOROOT="$(readlink -nf /var/vcap/packages/golang1.8)"
export GOPATH="/var/vcap/packages/acceptance-tests"
export PATH="${GOROOT}/bin:${PATH}"

export EATS_CONFIG=/tmp/config.json
export EATS_RELEASE_VERSION="<%= p('etcd.acceptance_tests.etcd_release_version') %>"

cat > $EATS_CONFIG <<EOF
<%= p('etcd.acceptance_tests').to_json %>
EOF

chown -R vcap:vcap "/var/vcap/data/"
pushd "/var/vcap/data/tmp" > /dev/null
  chpst -u vcap:vcap bash -c "${GOPATH}/src/github.com/cloudfoundry-incubator/etcd-release/src/acceptance-tests/scripts/test -nodes <%= p('etcd.acceptance_tests.parallel_nodes') %>"
popd > /dev/null
